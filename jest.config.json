{
  "cacheDirectory": ".jest/cache",
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/node_modules/**",
    "!**/tests/**"
  ],
  "coverageDirectory": ".jest/coverage",
  "preset": "ts-jest",
  "roots": [
    "<rootDir>/tests"
  ],
  "testEnvironment": "node",
  "testMatch": [
    "**/*.test?(s).ts"
  ],
  "transform": {
    "test?(s).ts$": [
      "ts-jest",
      {
        "tsconfig": "./tsconfig.tests.json"
      }
    ]
  }
}
